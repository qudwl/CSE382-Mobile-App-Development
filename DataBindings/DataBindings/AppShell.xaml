<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DataBindings.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DataBindings"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="C2C">
            <ShellContent ContentTemplate="{DataTemplate local:ControlToControl}" />
        </Tab>
        <Tab Title="1W2S">
            <ShellContent ContentTemplate="{DataTemplate local:OneWayToSource}" />
        </Tab>
        <Tab Title="Exercise">
            <ShellContent ContentTemplate="{DataTemplate local:Exercise}" />
        </Tab>
    </TabBar>

</Shell>
