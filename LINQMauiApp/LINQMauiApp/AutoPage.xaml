        <HorizontalStackLayout>
            <Button Text="Q4" Clicked="ButtonClicked"/>
            <Button Text="Q5" Clicked="ButtonClicked"/>
            <Button Text="Q6" Clicked="ButtonClicked"/>
            <Button Text="Q7" Clicked="ButtonClicked"/>
