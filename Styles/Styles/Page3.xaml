<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Styles.Page3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Int32 x:Key="fontSz">16</x:Int32>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="L1"/>
        <Label Text="L2"/>
        <Label Text="L3"/>
        <Button Text="B1" Clicked="Button_Clicked" FontSize="{DynamicResource fontSz}"/>
        <Button Text="B2" Clicked="Button_Clicked" FontSize="{DynamicResource fontSz}"/>
        <Button Text="B3" Clicked="Button_Clicked" FontSize="{DynamicResource fontSz}"/>
        <Entry Text="entry"/>
        <Entry Text="entry"/>
        <Entry Text="entry"/>
        <Picker>
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Baboon</x:String>
                    <x:String>Capuchin Monkey</x:String>
                    <x:String>Blue Monkey</x:String>
                    <x:String>Squirrel Monkey</x:String>
                    <x:String>Golden Lion Tamarin</x:String>
                    <x:String>Howler Monkey</x:String>
                    <x:String>Japanese Macaque</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
</ContentPage>