<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewXAML.ObjectPage">
    <VerticalStackLayout VerticalOptions="FillAndExpand">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" x:Name="label" Text="n/a"/>
            <ListView Grid.Row="1" Grid.Column="0" x:Name="lv" ItemTapped="lv_ItemTapped"/>
            <WebView Grid.Row="2" Grid.Column="0" x:Name="webview" HeightRequest="400"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>