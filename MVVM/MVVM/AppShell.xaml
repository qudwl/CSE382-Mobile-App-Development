<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MVVM"
    xmlns:views="clr-namespace:MVVM.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Mult">
            <ShellContent ContentTemplate="{DataTemplate views:SimpleMultiplierPage}" />
        </Tab>
        <Tab Title="Clock">
            <ShellContent ContentTemplate="{DataTemplate views:ClockPage}" />
        </Tab> 
        <Tab Title="HSL">
            <ShellContent ContentTemplate="{DataTemplate views:HslSlidersPage}" />
        </Tab>
        <Tab Title="x^3">
            <ShellContent ContentTemplate="{DataTemplate views:PowersOfThreePage}" />
        </Tab>
        <Tab Title="Adding">
            <ShellContent ContentTemplate="{DataTemplate views:AddingMachinePage}" />
        </Tab>
    </TabBar>
</Shell>
