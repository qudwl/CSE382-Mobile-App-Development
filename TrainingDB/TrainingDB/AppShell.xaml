<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrainingDB.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrainingDB"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Configure">
            <ShellContent ContentTemplate="{DataTemplate local:ConfigurePage}" />
        </Tab>
        <Tab Title="Activities">
            <ShellContent ContentTemplate="{DataTemplate local:ActivityPage}" />
        </Tab>
        <Tab Title="Queries">
            <ShellContent ContentTemplate="{DataTemplate local:QueriesPage}" />
        </Tab>
    </TabBar>
</Shell>
